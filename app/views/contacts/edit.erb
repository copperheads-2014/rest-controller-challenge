<div class="container">
  <h1>Edit contact</h1>
  <form action="/contacts/<%= @contact.id %>" method="POST">
    <input name="_method" type="hidden" value="delete" />
    <input type="submit" value="DELETE" />
  </form>
  <form action="/contacts/<%= @contact.id %>" method="POST">
    <input name="_method" type="hidden" value="put" />
    <%= erb :"contacts/_form", locals: { contact: @contact } %>
  </form>
</div>
